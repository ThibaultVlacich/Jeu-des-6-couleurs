<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane alignment="TOP_CENTER" stylesheets="@css/home.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.isep.jeudes6couleurs.view.Home">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <ImageView fitHeight="65.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/logo.png" />
         </image>
         <GridPane.margin>
            <Insets top="10.0" />
         </GridPane.margin>
      </ImageView>
      <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#launchGame" prefHeight="30.0" prefWidth="150.0" styleClass="dark-blue" text="Nouvelle partie" textAlignment="CENTER" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets bottom="10.0" left="75.0" right="75.0" top="40.0" />
         </GridPane.margin>
      </Button>
      <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#quitApp" prefHeight="30.0" prefWidth="150.0" styleClass="dark-blue" text="Quitter" textAlignment="CENTER" GridPane.rowIndex="4">
         <GridPane.margin>
            <Insets bottom="10.0" left="75.0" right="75.0" top="10.0" />
         </GridPane.margin>
      </Button>
      <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#loadGame" prefHeight="30.0" prefWidth="150.0" styleClass="dark-blue" text="Charger une partie" textAlignment="CENTER" GridPane.rowIndex="2">
         <GridPane.margin>
            <Insets bottom="10.0" left="75.0" right="75.0" top="10.0" />
         </GridPane.margin>
      </Button>
      <Hyperlink maxWidth="300.0" onAction="#openGitHub" text="https://github.com/ThibaultVlacich/Jeu-des-6-couleurs" GridPane.rowIndex="5">
         <GridPane.margin>
            <Insets bottom="5.0" top="30.0" />
         </GridPane.margin>
      </Hyperlink>
      <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#showAbout" prefHeight="30.0" prefWidth="150.0" styleClass="dark-blue" text="A propos" textAlignment="CENTER" GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets bottom="10.0" left="75.0" right="75.0" top="10.0" />
         </GridPane.margin>
      </Button>
   </children>
</GridPane>
